{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/my-proyect/src",
  "monorepo": true,
  "root": "apps/my-proyect",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/my-proyect/tsconfig.app.json"
  },
  "projects": {
    "my-proyect": {
      "type": "application",
      "root": "apps/my-proyect",
      "entryFile": "main",
      "sourceRoot": "apps/my-proyect/src",
      "compilerOptions": {
        "tsConfigPath": "apps/my-proyect/tsconfig.app.json"
      }
    },
    "my-app": {
      "type": "application",
      "root": "apps/my-app",
      "entryFile": "main",
      "sourceRoot": "apps/my-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/my-app/tsconfig.app.json"
      }
    },
    "n-layer": {
      "type": "application",
      "root": "apps/n-layer",
      "entryFile": "main",
      "sourceRoot": "apps/n-layer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/n-layer/tsconfig.app.json"
      }
    }
  }
}